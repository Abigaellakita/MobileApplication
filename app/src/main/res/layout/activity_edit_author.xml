<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAuthorActivity">
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Author"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/app_backGd"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/f_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"
        android:hint="Author First Name"
        android:inputType="text"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/l_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"
        android:hint="Author Last Name"
        android:layout_below="@id/f_Name"
        android:inputType="text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Update Data"
        android:textSize="24sp" />



</RelativeLayout>